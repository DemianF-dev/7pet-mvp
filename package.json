{
  "name": "7pet-mvp-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "cd backend && prisma generate",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run vercel-build",
    "build": "npm run build:frontend && npm run build:backend",
    "backup:db": "cd api && npx tsx scripts/backup-database.ts",
    "restore:db": "cd api && npx tsx scripts/restore-database.ts",
    "opencode": "opencode",
    "opoencode": "opencode"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@prisma/client": "^7.0.0",
    "@prisma/adapter-neon": "^7.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@supabase/supabase-js": "^2.90.1",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "compression": "^1.8.1",
    "express-rate-limit": "^8.2.1",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.3",
    "bcryptjs": "^3.0.3",
    "socket.io": "^4.8.3",
    "zod": "^3.23.8",
    "axios": "^1.13.2",
    "pg": "^8.17.2",
    "pino": "^10.2.1",
    "web-push": "^3.6.7",
    "google-auth-library": "^10.5.0",
    "multer": "^1.4.5-lts.1",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "prisma": "^7.0.0",
    "typescript": "^5.4.5"
  }
}