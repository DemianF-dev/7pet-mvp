{
    "version": 2,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://www.my7.pet"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, sentry-trace, baggage"
                }
            ]
        }
    ],
    "buildCommand": "npm run build:frontend",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.ts": {
            "maxDuration": 10
        }
    },
    "crons": [
        {
            "path": "/api/cron/notifications",
            "schedule": "0 9 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/health",
            "destination": "/api/index.ts"
        },
        {
            "source": "/ping",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(auth|customers|pets|services|appointments|quotes|audit|dashboard|staff|management|invoices|goals|notifications|notification-settings|appreciations|products|support|maps|transport-settings|metrics|cron|feed|chat|hr|time-tracking|marketing|packages|recurrence|dev|pos)(/.*)?",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}