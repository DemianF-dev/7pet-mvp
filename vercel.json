{
    "version": 2,
    "buildCommand": "npm run build:frontend",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.ts": {
            "maxDuration": 10
        }
    },
    "crons": [
        {
            "path": "/api/cron/notifications",
            "schedule": "* * * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}