{
    "version": 2,
    "buildCommand": "npm run build:frontend && npm run build:backend",
    "installCommand": "npm install",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 20
        }
    },
    "crons": [
        {
            "path": "/api/cron/notifications",
            "schedule": "0 9 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/health",
            "destination": "/api/index.ts"
        },
        {
            "source": "/ping",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}