{
    "version": 2,
    "buildCommand": "npm run build:frontend",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.ts": {
            "maxDuration": 20
        }
    },
    "crons": [
        {
            "path": "/api/cron/notifications",
            "schedule": "0 9 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/health",
            "destination": "/api/index.ts"
        },
        {
            "source": "/ping",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(auth|customers|pets|services|appointments|quotes|audit|dashboard|staff|management|invoices|goals|notifications|notification-settings|appreciations|products|support|maps|transport-settings|metrics|cron|feed|chat|hr|time-tracking|marketing|packages|recurrence|dev|pos)(/.*)?",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}