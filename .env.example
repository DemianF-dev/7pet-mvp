# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=7pet

# Application Configuration
NODE_ENV=development
PORT=3001

# Security
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
# For Railway/Cron triggers
CRON_SECRET=your_cron_secret_here

# External Services
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/7pet
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Supabase Storage (for attachments)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Real-time Engine (Railway Socket.io Server)
SOCKET_SERVER_URL=your_socket_server_url
SOCKET_SERVER_SECRET=your_socket_server_secret

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=your_email_here@example.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Railway Configuration (for production)
# RAILWAY_ENVIRONMENT=production
# DATABASE_URL=postgresql://user:pass@host:port/db